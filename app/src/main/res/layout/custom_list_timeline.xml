<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdTimelineOwner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul atas"
                android:textSize="30dp"
                android:layout_toLeftOf="@+id/imgTimelineProfilOwner"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/tvJudulTimelineOwner"
                android:layout_alignParentLeft="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgTimelineProfilOwner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvJudulTimelineOwner"
                android:id="@+id/tvKeteranganTimelineOwner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvKeteranganTimelineOwner"
                android:text="Edit"
                android:textColor="#519ad2"
                android:id="@+id/btnEditTimelineOwner"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_toRightOf="@+id/btnEditTimelineOwner"
                android:layout_below="@+id/tvKeteranganTimelineOwner"
                android:layout_marginLeft="20dp"
                android:textColor="#519ad2"
                android:id="@+id/btnHapusOwner"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdTimelineInvestorr">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul atas"
                android:textSize="30dp"
                android:layout_toLeftOf="@+id/imgTimelineProfilInvestor"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/tvJudulTimelineInvestor"
                android:layout_alignParentLeft="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgTimelineProfilInvestor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tvJudulTimelineInvestor"
                android:id="@+id/tvKeteranganTimelineInvestor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvKeteranganTimelineInvestor"
                android:text="See More"
                android:textColor="@color/colorPrimary"
                android:id="@+id/btnEditTimelineInvestor"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telp"
                android:id="@+id/tvnomorInvestor"
                android:layout_below="@+id/btnEditTimelineInvestor"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link"
                android:textColor="#2774af"
                android:id="@+id/tvlinkInvestor"
                android:layout_below="@+id/tvnomorInvestor"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="1dp"
                android:id="@+id/tvdariInvestor"
                android:visibility="invisible"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>